{
	"name": "wbs",
	"version": "1.1.0",
	"description": "WordPress Block Base Site Starter",
	"keywords": [],
	"author": "CAMP4 inc.",
	"license": "GPL-2.0-or-later",
	"private": true,
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"build": "npm run build --ws --if-present",
		"dev": "node ./bin/dev.mjs",
		"format": "run-s -sn format:*",
		"format:js": "wp-scripts lint-js --fix",
		"format:css": "wp-scripts lint-style --fix",
		"format:fix": "wp-scripts format",
		"format:php": "npm run composer format",
		"lint": "run-s -sn lint:*",
		"lint:js": "wp-scripts lint-js",
		"lint:css": "wp-scripts lint-style",
		"lint:php": "npm run composer lint",
		"cli": "npm run wp-env -- run cli",
		"wp-env": "npx @wordpress/env",
		"wp-flush": "npm run cli -- wp rewrite flush --hard",
		"wp-export": "npm run cli -- ./env/export.sh",
		"wp-import": "npm run cli -- ./env/import.sh",
		"composer": "docker run --rm --interactive --tty --volume $PWD:/app composer composer",
		"packages-update": "wp-scripts packages-update && npm run packages-update --ws --if-present",
		"plugin-zip": "npm run plugin-zip --ws --if-present",
		"setup": "npm run composer install && npx @wordpress/env start && npm run cli -- ./env/setup.sh && npm run build",
		"init:sh": "chmod +x ./{env,bin}/*.sh && ./bin/init.sh"
	},
	"devDependencies": {
		"@wordpress/scripts": "31.2.0",
		"browser-sync": "^3.0.4",
		"chokidar": "5.0.0",
		"find-workspaces": "0.3.1",
		"npm-run-all2": "8.0.4",
		"stylelint-config-recess-order": "7.4.0",
		"zx": "8.8.5"
	},
	"workspaces": [
		"themes/*"
	],
	"browserslist": [
		"extends @wordpress/browserslist-config"
	]
}
