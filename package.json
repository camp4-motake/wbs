{
	"name": "wp-block-theme",
	"version": "0.1.0",
	"description": "",
	"keywords": [],
	"author": "",
	"license": "GPL-2.0-or-later",
	"engines": {
		"node": "^18 || ^20"
	},
	"private": true,
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "6.17.0",
		"@typescript-eslint/parser": "6.17.0",
		"@wordpress/browserslist-config": "5.31.0",
		"@wordpress/env": "^9.0.0",
		"@wordpress/eslint-plugin": "17.5.0",
		"@wordpress/prettier-config": "3.5.0",
		"@wordpress/stylelint-config": "^21.31.0",
		"browser-sync": "^3.0.2",
		"npm-run-all2": "6.1.1"
	},
	"scripts": {
		"build": "npm run build --workspaces --if-present --silent",
		"dev": "run-p dev:*",
		"dev:wp": "npm run dev --workspaces --if-present --silent",
		"dev:bs": "browser-sync start --config bs-config.js",
		"composer": "docker run --rm --interactive --tty --volume $PWD:/app composer composer",
		"format": "prettier --write --list-different . && run-s format:*",
		"format:scripts": "npm run lint:scripts -- --fix",
		"format:styles": "npm run lint:styles -- --fix",
		"format:plugin": "npm run composer format ./source/wp-content/plugins/mysite",
		"format:theme": "npm run composer format ./source/wp-content/themes/mysite",
		"lint": "run-s lint:*",
		"lint:scripts": "eslint --ignore-path .gitignore source/wp-content/{themes/mysite,plugins/mysite}",
		"lint:styles": "stylelint source/wp-content/{themes/mysite,plugins/mysite}/**/*.css -i .gitignore",
		"lint:plugin": "npm run composer lint ./source/wp-content/plugins/mysite",
		"lint:theme": "npm run composer lint ./source/wp-content/themes/mysite",
		"init": "chmod +x ./env/*.sh && chmod +x ./bin/init.sh && ./bin/init.sh",
		"setup": "npm ci && npm run composer install && npx wp-env start && npx wp-env run cli ./env/setup.sh && npx wp-env run cli wp theme activate mysite",
		"cli": "npm run wp-env run cli",
		"wp-env": "wp-env",
		"wp-export": "npx wp-env run cli ./env/export.sh",
		"wp-import": "npx wp-env run cli ./env/import.sh"
	},
	"workspaces": [
		"source/wp-content/plugins/myplugin",
		"source/wp-content/themes/mysite"
	],
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"volta": {
		"node": "20.10.0"
	}
}
