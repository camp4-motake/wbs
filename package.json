{
	"name": "wbs",
	"version": "0.1.0",
	"description": "WordPress Block Base Site Starter",
	"keywords": [],
	"author": "CAMP4 inc.",
	"license": "GPL-2.0-or-later",
	"private": true,
	"engines": {
		"node": "^18 || ^20"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "6.18.0",
		"@typescript-eslint/parser": "6.18.0",
		"@wordpress/browserslist-config": "5.31.0",
		"@wordpress/env": "^9.0.0",
		"@wordpress/eslint-plugin": "17.5.0",
		"@wordpress/prettier-config": "3.5.0",
		"@wordpress/stylelint-config": "^21.31.0",
		"browser-sync": "^3.0.2",
		"npm-run-all2": "6.1.1"
	},
	"scripts": {
		"postinstall": "npm run init --silent",
		"start": "npx wp-env start -- --xdebug",
		"build": "npm run build --workspaces --if-present --silent",
		"dev": "run-p dev:*",
		"dev:bs": "browser-sync start --config bs-config.js",
		"dev:wp": "npm run dev --workspaces --if-present --silent",
		"cli": "npx wp-env run cli",
		"composer": "docker run --rm --interactive --tty --volume $PWD:/app composer composer",
		"init": "chmod +x ./{env,bin}/*.sh && ./bin/init.sh",
		"lint": "run-s lint:**",
		"lint:scripts": "eslint --ignore-path .gitignore .",
		"lint:styles": "stylelint ./**/*.css -i .gitignore",
		"lint:php": "npm run composer lint source/wp-content/{themes/mysite,plugins/mysite-plugin}",
		"format": "run-s format:**",
		"format:prettier": "prettier --write --list-different .",
		"format:scripts": "npm run lint:scripts -- --fix",
		"format:styles": "npm run lint:styles -- --fix",
		"format:php": "npm run composer format source/wp-content/{themes/mysite,plugins/mysite-plugin}",
		"setup": "run-s setup:**",
		"setup:1:composer": "npm run composer install",
		"setup:2:wp-env": "npm start",
		"setup:3:wp-conf": "npx wp-env run cli ./env/setup.sh",
		"setup:4:wp-theme": "npx wp-env run cli wp theme activate mysite",
		"setup:5:build": "npm run build",
		"wp-export": "npx wp-env run cli ./env/export.sh",
		"wp-import": "npx wp-env run cli ./env/import.sh"
	},
	"workspaces": [
		"source/wp-content/plugins/mysite-plugin",
		"source/wp-content/themes/mysite"
	],
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"volta": {
		"node": "20.10.0",
		"npm": "10.2.5"
	}
}
