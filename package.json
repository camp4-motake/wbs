{
	"name": "wbs",
	"version": "1.0.1",
	"description": "WordPress Block Base Site Starter",
	"keywords": [],
	"author": "CAMP4 inc.",
	"license": "GPL-2.0-or-later",
	"private": true,
	"engines": {
		"node": ">=22",
		"pnpm": ">=10"
	},
	"packageManager": "pnpm@10.0.0",
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"postinstall": "pnpm run init --silent",
		"build": "pnpm -r run build",
		"dev": "pnpm -r run dev & browser-sync start --config bs-config.js",
		"format": "pnpm -r run format",
		"lint": "pnpm -r run lint",
		"cli": "wp-env run cli",
		"wp-env": "wp-env",
		"wp-flush": "wp-env run cli wp rewrite flush --hard",
		"wp-export": "wp-env run cli ./env/export.sh",
		"wp-import": "wp-env run cli ./env/import.sh",
		"composer": "docker run --rm --interactive --tty --volume $PWD:/app composer composer",
		"composer-install": "npm run composer install",
		"composer-update": "npm run composer update",
		"setup": "pnpm run composer-install && node ./bin/wp-setup.mjs",
		"init": "chmod +x ./{env,bin}/*.sh && ./bin/init.sh"
	},
	"dependencies": {
		"@wordpress/scripts": "30.8.1",
		"zx": "8.3.0"
	},
	"devDependencies": {
		"@wordpress/env": "10.15.0",
		"browser-sync": "^3.0.3",
		"stylelint-config-recess-order": "5.1.1"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	]
}
