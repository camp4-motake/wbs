{
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"emmet.includeLanguages": {
		"postcss": "css"
	},
	"files.exclude": {
		".cache": true,
		"composer.lock": true,
		"node_modules": false,
		"package-lock.json": true,
		"source/wp-content/mu-plugins": true,
		"source/wp-content/plugins/advanced-custom-fields-pro": true,
		"vendor": true,
		"**/*.tsbuildinfo": true
	},
	"files.watcherExclude": {
		"**/_bkp/**": true,
		"**/build/**": true,
		"**/dist/**": true,
		"*.sql": true,
		"*.zip": true
	},
	"files.associations": {
		"*.css": "postcss"
	},
	"css.validate": false,
	"postcss.validate": false,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	},
	"phpCodeSniffer.autoExecutable": true,
	"phpCodeSniffer.standard": "Automatic",
	"phpCodeSniffer.lintAction": "Save",
	"intelephense.environment.includePaths": [
		"source/wp-content/plugins/advanced-custom-fields-pro"
	],
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"alpine-intellisense.settings.languageScopes": "html,php"
	/*

	// ex) phpcs only
	"[php]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer"
	},

	// ex) multi-formatter
	"[php]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "Jota0222.multi-formatter",
		"multiFormatter.formatterList": [
			"bmewburn.vscode-intelephense-client",
			"obliviousharmony.vscode-php-codesniffer",
		],
	},

	*/
}
