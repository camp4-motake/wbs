{
	"editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
	"editor.formatOnSave": true,
	"emmet.includeLanguages": {
		"postcss": "css"
	},
	"files.exclude": {
		".cache": true,
		"composer.lock": true,
		"node_modules": false,
		"package-lock.json": true,
		"source/wp-content/mu-plugins": true,
		"source/wp-content/plugins/advanced-custom-fields-pro": true,
		"vendor": true,
		"**/*.tsbuildinfo": true
	},
	"files.watcherExclude": {
		"**/_bkp/**": true,
		"**/build/**": true,
		"**/dist/**": true,
		"*.sql": true,
		"*.zip": true
	},
	"css.validate": false,
	"postcss.validate": false,
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "explicit"
	},
	"phpCodeSniffer.autoExecutable": true,
	"phpCodeSniffer.standard": "Automatic",
	"phpCodeSniffer.lintAction": "Save",
	"intelephense.environment.includePaths": [
		"source/wp-content/plugins/advanced-custom-fields-pro"
	],
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[php]": {
		"editor.defaultFormatter": "Jota0222.multi-formatter",
		"multiFormatter.formatterList": [
			"bmewburn.vscode-intelephense-client",
			"obliviousharmony.vscode-php-codesniffer"
		]
	},
	"cSpell.words": [ "LGBTQ", "WBS", "uncategorized" ]
	/*

	// ex) phpcs only
	"[php]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "obliviousharmony.vscode-php-codesniffer"
	},

	*/
}
