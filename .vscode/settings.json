{
	"files.exclude": {
		"**/.DS_Store/**": true,
		".cache": true,
		"composer.lock": true,
		"node_modules": false,
		"package-lock.json": true,
		"source/wp-content/mu-plugins": true,
		"source/wp-content/plugins/advanced-custom-fields-pro": true,
		"**/*.tsbuildinfo": true
	},
	"files.watcherExclude": {
		"**/_bkp/**": true,
		"**/build/**": true,
		"**/dist/**": true,
		"*.sql": true,
		"*.zip": true
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixAll": "explicit"
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,

	"css.validate": false,
	"scss.validate": false,
	"stylelint.validate": [ "css", "scss" ],
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"eslint.useFlatConfig": false,
	"typescript.tsdk": "node_modules/typescript/lib",

	/** https://github.com/bmewburn/vscode-intelephense */
	"intelephense.files.exclude": [
		"**/.cache/**",
		"**/.git/**",
		"**/.history/**",
		"**/vendor/**"
	],
	"intelephense.environment.includePaths": [
		"source/wp-content/plugins/advanced-custom-fields-pro"
	],
	"intelephense.environment.phpVersion": "7.2.24",

	/** https://marketplace.visualstudio.com/items?itemName=obliviousharmony.vscode-php-codesniffer */
	"phpCodeSniffer.autoExecutable": true,
	"phpCodeSniffer.standard": "Automatic",
	"phpCodeSniffer.exclude": [
		"**/.git/**",
		"**/.svn/**",
		"**/.hg/**",
		"**/.cache/**",
		"**/jetpack_vendor/**",
		"**/vendor/**"
	],

	"[php]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "Jota0222.multi-formatter",
		"multiFormatter.formatterList": [
			"bmewburn.vscode-intelephense-client",
			"obliviousharmony.vscode-php-codesniffer"
		]
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[handlebars]": {
		"editor.formatOnSave": false
	},

	/** https://github.com/vunguyentuan/vscode-css-variables */
	"cssVariables.lookupFiles": [ "env/.vscode-helper/*.css" ],

	/** https://github.com/streetsidesoftware/vscode-spell-checker */
	"cSpell.words": [ "wbs", "uncategorized" ]
}
