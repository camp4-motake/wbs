{
	"files.exclude": {
		".cache": true,
		"composer.lock": true,
		"node_modules": false,
		"package-lock.json": true,
		"source/wp-content/mu-plugins": true,
		"source/wp-content/plugins/advanced-custom-fields-pro": true,
		"**/*.tsbuildinfo": true
	},
	"files.watcherExclude": {
		"**/_bkp/**": true,
		"**/build/**": true,
		"**/dist/**": true,
		"*.sql": true,
		"*.zip": true
	},
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "explicit"
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"css.validate": false,
	"postcss.validate": false,
	"[handlebars]": {
		"editor.formatOnSave": false
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	// WORKAROUND
	"[php]": {
		"editor.defaultFormatter": "Jota0222.multi-formatter",
		"multiFormatter.formatterList": [
			"bmewburn.vscode-intelephense-client",
			"ValeryanM.vscode-phpsab"
		]
	},

	/** vscode-intelephense @see https://github.com/bmewburn/vscode-intelephense */
	"intelephense.environment.includePaths": [
		"source/wp-content/plugins/advanced-custom-fields-pro"
	],

	/** vscode-css-variables @see https://github.com/vunguyentuan/vscode-css-variables */
	"cssVariables.lookupFiles": [ "env/.vscode-helper/*.css" ],

	/** vscode-spell-checker @see https://github.com/streetsidesoftware/vscode-spell-checker */
	"cSpell.words": [ "wbs", "uncategorized" ]
}
