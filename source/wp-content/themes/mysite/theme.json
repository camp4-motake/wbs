	"styles": {
		"spacing": {
			"blockGap": "1.5rem",
			"margin": {},
			"padding": {
				"top": "0",
				"bottom": "0",
				"left": "0",
				"right": "0"
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--text-base)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--16)",
			"fontFamily": "var(--wp--preset--font-family--sans-serif-ja)",
			"lineHeight": "var(--wp--preset--line-height-base)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--40)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--28)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--24)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--20)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--18)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--16)"
				}
			}
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--base)"
				}
			},
			"core/heading": {
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--base)"
				}
			},
			"core/buttons": {
				"spacing": {
					"blockGap": "1rem"
				},
				"elements": {
					"button": {
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--base)",
								"background": "var(--wp--preset--color--primary)"
							},
							"border": {
								"color": "var(--wp--preset--color--primary)"
							}
						}
					}
				}
			},
			"core/button": {
				"color": {
					"text": "var(--wp--preset--color--text-base)",
					"background": "var(--wp--preset--color--base)"
				},
				"border": {
					"radius": "0",
					"width": "2px",
					"color": "var(--wp--preset--color--text-base)",
					"style": "solid"
				},
				"typography": {
					"lineHeight": "var(--wp--custom--line-height--md)"
				},
				"spacing": {
					"padding": {
						"bottom": "calc(0.75em - 1px)",
						"left": "calc(4em - 1px)",
						"right": "calc(4em - 1px)",
						"top": "calc(0.75em - 1px)"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	],
	"customTemplates": []
}
